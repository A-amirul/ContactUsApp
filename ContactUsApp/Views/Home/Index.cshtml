@{
    ViewData["Title"] = "Home";
    int serial = 1;

}

<h2>All Contacts</h2>

@if (ViewBag.AllContacts != null && ViewBag.AllContacts.Count > 0)
{
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Email</th>
                <th>Subject</th>
                <th>Message</th>
                <th>Created At</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var contact in ViewBag.AllContacts)
            {
                <tr>
                    <td>@serial</td>
                    <td>@contact.Name</td>
                    <td>@contact.Email</td>
                    <td>@contact.Subject</td>
                    <td>@contact.Message</td>
                    <td>@contact.CreatedAt.ToString("g")</td>
                </tr>
                serial++;
            }
        </tbody>
    </table>
}
else
{
    <p>No messages submitted yet.</p>
}
